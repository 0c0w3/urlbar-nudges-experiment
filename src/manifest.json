{
  "manifest_version": 2,
  "name": "Urlbar Tips",
  "version": "1.0.0",
  "description": "Shows tips in the urlbar view in certain situations.",
  "applications": {
    "gecko": {
      "id": "urlbar-tips@shield.mozilla.org",
      "strict_min_version": "72a1"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "urlbar-tips@shield.mozilla.org",
      "strict_min_version": "72a1"
    }
  },
  "permissions": [
    "normandyAddonStudy",
    "search",
    "storage",
    "tabs",
    "telemetry",
    "urlbar",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "incognito": "spanning",
  "hidden": true,
  "experiment_apis": {
    "experiments_urlbar": {
      "schema": "experiments/urlbar/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["experiments", "urlbar"]],
        "script": "experiments/urlbar/api.js"
      }
    }
  }
}
